gris_oscuro= #444
azul= blue
naranja = #944E87
rosa= #18B77F
gris_texto= #CECBCE

@font-face {
    font-family: 'iconitos';
    src:url('../fonts/icomoon.eot');
    src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
        url('../fonts/icomoon.ttf') format('truetype'),
        url('../fonts/icomoon.woff') format('woff'),
        url('../fonts/icomoon.svg#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

a 
    color naranja
body
    background #E8E8E8
    color gris_oscuro
    font-family Arial
    font-size  16px

footer
    background naranja
    color rgba(white,0.5)
    padding 1em 0
    text-align center
    width 100%
    h3
        font-size 14px
        font-weight normal

        strong
            display block

        .mejor
            &:before
            &:after
                content "-"

form
    padding 0.8em
    display none

    input
        margin-left 40px

header
    background gris_oscuro
    box-shadow 0 5px 0 rgba(0,0,0,0.2)
    color white
    overflow hidden
    padding 0.5em
    position relative
    z-index 1


    .logo
        border-right 1px solid azul
        float left
        width 60px
        border-radius 50%

        img
            width 52px
    .titular
        margin 0 60px 0 70px
        
        .filtro
            color azul
            font-weight bold
            font-style italic
            text-decoration none
            font-size 14px

        .publicar
            background naranja
            color white
            float right
            padding 0.2em 0.5em
            text-decoration none
            font-style italic
            text-shadow 2px 2px 0px black
            margin -3px 1em 0 0
        
        .titulo
            font-size 18px
            font-weight normal
            margin 0
            padding 0

    .usuario
        position absolute
        right 10px
        top 0

        .avatar
            margin 0 1em 0 0
            position relative
            z-index 2

            img
                width 50px
                border-radius 50%

        .flechita
            background naranja
            color white
            display block
            padding 2px
            position absolute
            right 0
            top 15px
            text-align right
            text-decoration none
            width 50%
            z-index 0
nav
    background rosa
    border-left 15px solid white
    position relative

    &:before
        border-left 7px solid white
        border-bottom 20px solid rosa
        border-top 20px solid rosa
        content ""
        position absolute
        top 0
        left 0

    .menu
        height 40px
        line-height 40px
        margin 0
        overflow-x auto
        white-sapce nowrap
        padding 0

        li
            display inline-block

            a
                color white
                display block
                margin 0 0.5em
                padding 0 0.2em
                text-decoration none
                &:before
                    content"*"
.post
    padding 0.5em

    .post
        background white
        color gris_texto
        box-shadow 2px 2px 10px rgba(black, 0.5)
        border-radius 0 0 0.5em 0.5em

        .acciones
            border-top 3px solid azul
            padding 0.5em
            overflow hidden

            .datos
                float right

                .comentarios
                    background gris_oscuro
                    border-radius 3px
                    color white
                    margin 0 1em 0 0
                    padding 2px 5px
                    text-decoration none

                .estrellita
                    text-decoration none

                    &:after
                        font-family "iconitos"
                        color #E0D561
                        content "\e601"

            .votos
                float left

                .down
                .up
                    text-decoration none

                .down
                    color red

                    &:before
                        font-family "iconitos"
                        font-size 1.5em
                        content "\e602"
                        vertical-align bottom

                .up
                    color green
                    &:before
                        font-family "iconitos"
                        font-size 1.5em
                        content "\e603"
                        vertical-align bottom

        .descripcion
            color gris_texto
            
            .detalles
                height 160px
                margin-left 130px

                .autor
                    margin 0.5em 0 2em 0

                .fecha
                    float right
                    margin 0 1em 0 0

                .tag
                    background azul
                    border-radius 0.5em
                    color white
                    padding 0.2em 0.5em
                    text-decoration none

                .titulo
                    color gris_oscuro
                    font-size 1.1em
                    font-style italic
                    margin 0
                    padding 0.5em 0.5em 0 0


            .imagen
                float left

                img
                    height 160px
                    vertical-align top
                    width 120px




